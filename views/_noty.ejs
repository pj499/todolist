<script>
      <% if(flash.success && flash.success.length>0) { %>
            
            new Noty({
                theme: 'nest',
                text: '<%= flash.success %>',
                type: 'success',
                layout: 'topRight',
                timeout: 2000
            }).show();
            
         <% } %> 

         <% if(flash.error && flash.error.length>0) { %>
            
            new Noty({
                theme: 'metroui',
                text: '<%= flash.error %>',
                type: 'error',
                layout: 'topRight',
                timeout: 2000
            }).show();
            
         <% } %> 
</script>